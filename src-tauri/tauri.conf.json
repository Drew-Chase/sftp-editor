{
	"$schema": "https://github.com/tauri-apps/tauri/releases/download/tauri-build-v2.0.0-beta.22/schema.json",
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "sftp-editor",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true
			},
			"window": {
				"close": true,
				"hide": true,
				"show": true,
				"maximize": true,
				"minimize": true,
				"unmaximize": true,
				"unminimize": true,
				"startDragging": true
			}
		},
		"windows": [
			{
				"title": "SFTP Editor",
				"width": 1280,
				"height": 720,
				"resizable": true,
				"minWidth": 800,
				"minHeight": 600,
				"decorations": false,
				"titleBarStyle": "Overlay",
				"hiddenTitle": true,
				"visible": false
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "chase.cargo.sftp-editor",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.ico",
				"icons/icon.ico"
			]
		}
	}
}
