{
	"$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/tauri-build-v1.5.2/core/tauri-config-schema/schema.json",
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "sftp-editor",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true
			},
			"window": {
				"close": true,
				"hide": true,
				"show": true,
				"maximize": true,
				"minimize": true,
				"unmaximize": true,
				"unminimize": true,
				"startDragging": true
			}
		},
		"windows": [
			{
				"label": "main",
				"title": "SFTP Editor",
				"width": 1280,
				"height": 720,
				"resizable": true,
				"minWidth": 800,
				"minHeight": 600,
				"decorations": false,
				"titleBarStyle": "Overlay",
				"hiddenTitle": true,
				"visible": false
			},
			{
				"label": "logger",
				"alwaysOnTop": true,
				"title": "Log Viewer",
				"width": 600,
				"height": 600,
				"resizable": true,
				"minWidth": 530,
				"minHeight": 370,
				"decorations": false,
				"titleBarStyle": "Overlay",
				"hiddenTitle": true,
				"visible": false,
				"url": "log-window.html"
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "chase.cargo.sftp-editor",
			"icon": [
				"icons/16x16.png",
				"icons/32x32.png",
				"icons/64x64.png",
				"icons/128x128.png",
				"icons/256x256.png",
				"icons/512x512.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		}
	}
}
